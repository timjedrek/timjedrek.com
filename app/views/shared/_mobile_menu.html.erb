<div x-data="{ open: false }" class="pb-2 text-center items-center text-white flex flex-col fixed bg-red-800 w-full left-0 z-50">
  <div class="flex flex-row items-center justify-between w-full py-3">
    <!--Logo-->
    <div class="ml-3">
      <%= render "shared/logo" %>
    </div>
    <!--Hamburger button-->
      <button x-ref="hardware" @click="open = ! open" class="text-4xl text-red-400 hover:text-red-500 mr-3">
        â˜°
      </button>
  </div>

  <!--Container for mobile menu-->
  <div x-show="open" x-transition.duration.200ms class="flex flex-col items-center justify-center mt-24 pb-32 fixed bg-red-800 w-screen h-screen z-50">
    <!--links-->
    <ul class="text-md">
      <li><%= link_to "Home", root_path, class: "leading-10 hover:text-red-400" %></li>
      <li><%= link_to "Client Websites", client_websites_path, class: "leading-10 hover:text-red-400" %></li>
      <li><%= link_to "Projects", projects_path, class: "leading-10 hover:text-red-400" %></li>
      <li><%= link_to "Articles", articles_path, class: "leading-10 hover:text-red-400" %></li>
      <li><%= link_to "Contact", contact_path, class: "leading-10 hover:text-red-400" %></li>
    </ul>
    <!--Close button-->
    <button @click="open = ! open; $refs.hardware.style.display='block'" x-transition.duration.200ms class="leading-10 border-2 w-min mt-5 px-5 rounded-full py-1 hover:text-red-400 hover:border-red-400 ">
      X
    </button>
  </div>
</div>
