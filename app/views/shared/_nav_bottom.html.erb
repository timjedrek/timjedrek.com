<% if current_page?(controller: "home", action: "index") %>
<!--ONLY FOR HOME PAGE-->
  <!--Social media Icons-->
  <%= render "shared/social_media_icons"%>
  <!--More Links-->
  <%= render "shared/bottom_links"%>
