<div class="bg-zinc-50 w-full">
  <div class="p-10">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-200 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @page %>

    <!--Back Link-->
    <div class="mt-10">
      <% if @page.category == "Client Websites" %>
        <%= link_to '↩ Back to Client Websites', client_websites_path, class: "text-red-800 hover:underline" %>
      <% end %>
      <% if @page.category == "Example Sites" %>
        <%= link_to '↩ Back to Example Sites', example_sites_path, class: "text-red-800 hover:underline" %>
      <% end %>
      <% if @page.category == "Projects" %>
        <%= link_to '↩ Back to Projects', projects_path, class: "text-red-800 hover:underline" %>
      <% end %>
      <% if @page.category == "Articles" %>
        <%= link_to '↩ Back to Articles', articles_path, class: "text-red-800 hover:underline" %>
      <% end %>
    </div>

    <%#= link_to 'Edit this page', edit_page_path(@page), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%#= button_to 'Destroy this page', page_path(@page), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%#= link_to 'Back to pages', pages_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
